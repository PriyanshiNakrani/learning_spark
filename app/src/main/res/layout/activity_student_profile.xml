<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/profile_bg"
    tools:context=".ui.student.Student_Profile">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/Dpurple3"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dot3"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="360dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/dot"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Student Profile"
        android:textAlignment="center"
        android:textColor="@color/Lpurple"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="2dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="55dp"
        app:cardCornerRadius="30dp"
        android:elevation="30dp"
        app:cardElevation="30dp">

            <ImageView
                android:id="@+id/imgView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_below="@+id/layout_button"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="3dp"
                android:src="@drawable/user" />

            <ImageView
                android:id="@+id/btnChoose"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle"
                android:src="@drawable/choose" />

            <ImageView
                android:id="@+id/btnUpload"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/img_upload" />



    </androidx.cardview.widget.CardView>

    <LinearLayout
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/name"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10.0sp"
                android:textColorHint="@color/white"
                android:nextFocusForward="@+id/emailET"
                app:boxStrokeColor="@color/white"
                app:layout_constraintHorizontal_bias=".5"
                app:layout_constraintVertical_bias="0.400"
                app:layout_constraintWidth_percent=".8">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/pNameEt"
                    android:layout_width="290dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="15.0dip"
                    android:drawableLeft="@drawable/user"
                    android:drawablePadding="10dp"
                    android:hint="Enter Name"
                    android:inputType="textPersonName"
                    android:padding="15.0dip"
                    android:textColor="@color/Dpurple2"
                    android:enabled="false"
                    android:editable="true"
                    android:textColorHint="@color/Dpurple2" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10.0sp"
                android:textColorHint="@color/white"
                app:boxStrokeColor="@color/white"
                android:nextFocusForward="@+id/passET"
                app:layout_constraintHorizontal_bias=".5"
                app:layout_constraintVertical_bias="0.400"
                app:layout_constraintWidth_percent=".8">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/PemailET"
                    android:layout_width="290dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="15.0dip"
                    android:drawableLeft="@drawable/email"
                    android:drawablePadding="10dp"
                    android:hint="Enter Email"
                    android:inputType="textEmailAddress"
                    android:padding="15.0dip"
                    android:editable="true"
                    android:textColor="@color/Dpurple2"
                    android:textColorHint="@color/Dpurple2" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/address"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10.0sp"
                android:textColorHint="@color/white"
                app:boxStrokeColor="@color/white"
                android:nextFocusForward="@+id/phoneET"
                app:layout_constraintHorizontal_bias=".5"
                app:layout_constraintVertical_bias="0.400"
                app:layout_constraintWidth_percent=".8">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/PaddressET"
                    android:layout_width="290dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="15.0dip"
                    android:drawableStart="@drawable/home"
                    android:drawablePadding="10dp"
                    android:hint="Enter Address"
                    android:padding="15.0dip"
                    android:editable="true"
                    android:textColor="@color/Dpurple2"
                    android:textColorHint="@color/Dpurple2" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/phone"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10.0sp"
                android:textColorHint="@color/white"
                app:boxStrokeColor="@color/white"
                android:nextFocusForward="@+id/btnsignup"
                app:layout_constraintHorizontal_bias=".5"
                app:layout_constraintVertical_bias="0.400"
                app:layout_constraintWidth_percent=".8">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/PPhoneET"
                    android:layout_width="290dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="15.0dip"
                    android:drawableLeft="@drawable/call"
                    android:drawablePadding="10dp"
                    android:hint="Enter Phone No"
                    android:inputType="phone"
                    android:padding="15.0dip"
                    android:editable="true"
                    android:textColor="@color/Dpurple2"
                    android:textColorHint="@color/Dpurple2" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/date"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10.0sp"
                android:textColorHint="@color/white"
                app:boxStrokeColor="@color/white"
                android:nextFocusForward="@+id/btnsignup"
                app:layout_constraintHorizontal_bias=".5"
                app:layout_constraintVertical_bias="0.400"
                app:layout_constraintWidth_percent=".8">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/PDateET"
                    android:layout_width="290dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="15.0dip"
                    android:drawableLeft="@drawable/calendar"
                    android:drawablePadding="10dp"
                    android:hint="Enter Joining Date"
                    android:inputType="phone"
                    android:padding="15.0dip"
                    android:editable="true"
                    android:textColor="@color/Dpurple2"
                    android:textColorHint="@color/Dpurple2" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/msp"
        app:itemIconTint="@drawable/msp1"
        app:itemTextColor="@drawable/msp1"
        app:menu="@menu/item_menu" />

</RelativeLayout>

</LinearLayout>