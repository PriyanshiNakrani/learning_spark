<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/t_sub"
    tools:context=".ui.admin.T_Sub">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="150dp"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_guj"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:src="@drawable/g1"/>

                <ImageView
                    android:id="@+id/img_eng"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:src="@drawable/eng1"/>

                <ImageView
                    android:id="@+id/img_hindi"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:src="@drawable/h1"/>

                <ImageView
                    android:id="@+id/img_maths"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:src="@drawable/math1"/>

                <ImageView
                    android:id="@+id/img_ss"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:src="@drawable/ss1"/>

                <ImageView
                    android:id="@+id/img_sci"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:src="@drawable/sci1"/>

                <ImageView
                    android:id="@+id/img_sa"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:src="@drawable/sa1"/>

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>